<Window x:Class="RaggedBooks.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaggedBooks.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GridSplitter Height="100" Width="5"/>
        <TextBox x:Name="TextQuery" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Height="67"/>
        <Button x:Name="ButtonSearch" Content="Search" HorizontalAlignment="Left" Margin="165,82,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock x:Name="TextResult" HorizontalAlignment="Left" Margin="10,138,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="264" Width="195"/>

    </Grid>
</Window>
